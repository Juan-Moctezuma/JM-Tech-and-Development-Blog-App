<%- include("../partials/header") %>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center">
                <h1>Create a New Article</h1><br>
            </div>
            <div class="col-xs-12 col-md-6 col-lg-4">
                <form action="/articles" method="POST">
                    <div class="form-group">
                        <label for="title" style="font-weight:bold;">Header / Title</label>
                        <input class="form-ctrl" style="width: 100%;" type="text" name="title" placeholder="Title">
                    </div>
                    <div class="form-group">
                        <label for="image" style="font-weight:bold;">Cover Image</label>
                        <input class="form-ctrl" style="width: 100%;" type="text" name="image" placeholder="Image Url">
                    </div>
                    <div class="form-group">
                        <label for="content" style="font-weight:bold;">Post Content</label>
                        <textarea class="form-ctrl" style="width: 100%;" type="text" name="content" cols="20" rows="30" placeholder="Enter Content Here"></textarea>
                    </div>
                    <button class="btn btn-lg btn-success btn-block">Submit</button><br>
                </form>
                <a href="/articles">Cancel and Go Back</a>
            </div>  
        </div>
    </div>
<%- include("../partials/footer") %>
