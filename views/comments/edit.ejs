<%- include("../partials/header") %>
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-12 text-center">
				<h1>Edit Comment</h1><br>
			</div>
			<div class="col-xs-12 col-md-6 col-lg-4">
				<form action="/articles/<%= article_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<label for="comment" style="font-weight: bold;">Comment</label>
						<input class="form-ctrl" style="width: 100%;" type="text" name="comment[text]" value="<%= comment.text %>">
					</div>
					<button class="btn btn-lg btn-success btn-block">Re-Submit</button><br>
				</form>
				<a href="/articles">Cancel and Go Back</a>
			</div>
		</div>
	</div><br><br><br><br><br><br><br>
<%- include("../partials/footer") %>
