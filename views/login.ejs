<%- include("./partials/header") %>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center">
                <h1>Log In</h1><br>
            </div>
            <div class="col-xs-12 col-md-6 col-lg-4">
                <form action="/login" method="post">
                    <div class="form-group">
                        <label for="username" style="font-weight:bold;">Username</label>
                        <input type="text" name="username" style="width: 100%;" type="text" placeholder="John.Doe">
                    </div>
                    <div class="form-group">
                        <label for="password" style="font-weight:bold;">Password</label>
                        <input type="password" name="password" style="width: 100%;" type="text" placeholder="1234">
                    </div>
                    <button class="btn btn-lg btn-success btn-block">Submit</button><br>
                </form>
                <a href="/articles">Cancel and Go Back</a>
            </div>
        </div>
    </div><br><br><br><br><br>
<%- include("./partials/footer") %>